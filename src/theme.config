/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site       : 'itsminestyles';
@reset      : 'default';

@headerWrapper : 'itsminestyles';

/* Elements */
@button     : 'itsminestyles';
@container  : 'itsminestyles';
@divider    : 'itsminestyles';
@flag       : 'itsminestyles';
@header     : 'itsminestyles';
@icon       : 'itsminestyles';
@image      : 'itsminestyles';
@input      : 'itsminestyles';
@label      : 'itsminestyles';
@list       : 'itsminestyles';
@loader     : 'itsminestyles';
@rail       : 'itsminestyles';
@reveal     : 'itsminestyles';
@segment    : 'itsminestyles';
@step       : 'itsminestyles';

/* Collections */
@breadcrumb : 'itsminestyles';
@form       : 'itsminestyles';
@grid       : 'itsminestyles';
@menu       : 'itsminestyles';
@message    : 'itsminestyles';
@table      : 'itsminestyles';

/* Modules */
@accordion  : 'itsminestyles';
@checkbox   : 'itsminestyles';
@dimmer     : 'itsminestyles';
@dropdown   : 'itsminestyles';
@embed      : 'itsminestyles';
@modal      : 'itsminestyles';
@nag        : 'itsminestyles';
@popup      : 'itsminestyles';
@progress   : 'itsminestyles';
@rating     : 'itsminestyles';
@search     : 'itsminestyles';
@shape      : 'itsminestyles';
@sidebar    : 'itsminestyles';
@sticky     : 'itsminestyles';
@tab        : 'itsminestyles';
@transition : 'itsminestyles';

/* Views */
@ad         : 'itsminestyles';
@card       : 'itsminestyles';
@comment    : 'itsminestyles';
@feed       : 'itsminestyles';
@item       : 'itsminestyles';
@statistic  : 'itsminestyles';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'themes';

/* Path to site override folder */
@siteFolder   : 'site/';


/*******************************
         Import Theme
*******************************/

@import "theme.less";

/* End Config */