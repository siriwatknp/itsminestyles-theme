.article-item {
    padding: 10px;
    .ui.items .item .ui.medium.image {
        width: 175px;
    }
}
.article-item > .ui.items .item .content .header {
    font-size: @relativeMedium;
}

/* Mobile Only */
@media only screen and (max-width: @largestMobileScreen) {
  .ui.items:not(.unstackable) > .item {
    margin: @mobileItemSpacing 0em;
  }

  .article-item .ui.items .item .ui.image .ui.image {
    padding-left: 10px;
  }
}